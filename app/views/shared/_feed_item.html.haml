%li
  %span.gravatar= link_to gravatar_for(feed_item.user), feed_item.user
  %span.micropost
    %span.user= link_to feed_item.user.name, feed_item.user
    %span.content= feed_item.content
    %span.timestamp Posted #{time_ago_in_words(feed_item.created_at)} ago.
  - user = feed_item.user rescue User.find(feed_item.user_id)
  - if current_user?(feed_item.user)
    %span.delete_link
      = link_to "delete", feed_item,
        :method => :delete,
        :confirm => "Are you sure?",
        :title => feed_item.content
