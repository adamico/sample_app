- title @title, false

.profile
  .main
    %h1
      = gravatar_for @user
      = @user.name
  %div{:class => "sidebar round"}
    %ul
      %li
        %strong Name
        = @user.name
      %li
        %strong URL
        = link_to user_path(@user), @user
      %li
        %strong Microposts
        = @user.microposts.count
  %ul.microposts
    - unless @user.microposts.empty?
      - @user.microposts.each do |mp|
        %li
          %span.content= mp.content
