!!! 5
%html

  %head
    %title= yield(:title)
    = csrf_meta_tag
    = javascript_include_tag :defaults
    = render 'layouts/stylesheets'
    = yield(:head)

  %body
    .container
      = render 'layouts/header'
      %section.round
        - if show_title?
          %h1= yield(:title)

        = yield
      = render 'layouts/footer'
